{
  "name": "pmer",
  "version": "0.0.12",
  "description": "Provide some powerful & helpful functions for Two-way communication with postMessage",
  "author": "qiqiboy",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=8.0.0",
    "tiger-new": "4.1.3"
  },
  "entryFile": "src/index.ts",
  "exportName": "pmer",
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "npm run lint && npm run clear && npm run build:declaration && npm run build:bundle",
    "build:bundle": "rollup -c",
    "build:declaration": "tsc --emitDeclarationOnly",
    "clear": "rimraf dist",
    "lint": "node_modules/.bin/eslint 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "node_modules/.bin/commitlint --edit $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0
      ],
      "scope-case": [
        0
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "semi": true,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,mjs,ts,tsx}": [
      "node_modules/.bin/prettier --write",
      "node_modules/.bin/eslint --fix",
      "git add"
    ],
    "src/**/*.{css,scss,less,json,html,md}": [
      "node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.0.0"
  },
  "homepage": "https://github.com/qiqiboy/pmer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiqiboy/pmer.git"
  },
  "keywords": [
    "postmessage",
    "post-message",
    "two-way-communication",
    "cross-domain",
    "iframe"
  ],
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/node": "11.13.19",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "babel-eslint": "10.0.3",
    "babel-preset-react-app": "9.0.1",
    "eslint": "6.2.2",
    "eslint-config-react-app": "5.0.1",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "1.7.0",
    "husky": "2.7.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "rollup": "3.29.5",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "1.1.0",
    "rollup-plugin-filesize": "6.2.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sass": "1.2.2",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "4.0.4",
    "typescript": "3.5.3"
  }
}
